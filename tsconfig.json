{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "module": "commonjs",
        "strict": false,
        "jsx": "preserve",
        "noImplicitAny": false,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "types": [
            "node"
            //"explorer-core"
        ]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx", "node_modules/explorer-core/**/*.ts"],
    "exclude": ["node_modules/explorer-core/tests/**/*.ts"]
}
